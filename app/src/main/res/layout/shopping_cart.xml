<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/productImageForShoppingCart"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >

        <TextView
            android:id="@+id/productTitleForCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="1dp"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            />
        <TextView
            android:id="@+id/productDetailsForCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Panasonic"
            android:layout_below="@+id/productTitleForCart"
            android:layout_marginLeft="130dp"
            />

        <ImageView
            android:id="@+id/productAddForCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productDetailsForCart"
            android:src="@drawable/ic_add_circle_24dp"
            android:layout_marginLeft="130dp"/>
        <TextView
            android:id="@+id/productQtyForCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_marginLeft="155dp"
            android:layout_below="@+id/productDetailsForCart"/>

        <ImageView
            android:id="@+id/productRemoveForCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productDetailsForCart"
            android:src="@drawable/ic_remove_circle_24dp"
            android:layout_marginLeft="165dp"
            />




        <ImageView
            android:id="@+id/removeProductAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_delete_24dp"
            />
        <TextView
            android:id="@+id/productPriceForCart"
            android:layout_below="@id/removeProductAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40dp"
            android:textColor="@color/colorAccent"
            />
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>



